#!/usr/bin/env sh
set -euo pipefail

if ! which pacman &>/dev/null; then 
  echo "Error: pacman not installed."
  exit 1
fi

echo "Installing core packages:"
sudo pacman -S \
  alacritty \
  arandr \
  borg \
  base-devel \
  eom \
  fcron \
  firefox \
  gimp \
  gmrun \
  gnome-keyring \
  gnupg \
  htop \
  inkscape \
  libreoffice-extension-texmaths \
  libreoffice-fresh \
  openbox \
  pavucontrol \
  pulseaudio \
  pulseaudio-alsa \
  pyenv \
  qutebrowser \
  rsync \
  scrot \
  sudo \
  the_silver_searcher \
  thunderbird \
  ttf-croscore \
  ttf-dejavu \
  ttf-liberation \
  ttf-roboto \
  xdotool \
  xsel \
  zathura \
  zathura-cb \
  zathura-djvu \
  zathura-pdf-mupdf \
  zathura-ps \
  zsh \

echo "Installing AUR packages:"
AUR_DIR=~/hacking/pkgbuild
mkdir -p $AUR_DIR

if ! type -p yay >/dev/null; then
  cd $AUR_DIR

  if [ ! -d $AUR_DIR/yay ]; then
    git clone https://aur.archlinux.org/yay.git
  fi
  cd yay
  makepkg -si
fi

yay -S \
  pithos \
  pulseaudio-ctl \
